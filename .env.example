# Application
APP_NAME="Nexus Framework"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_KEY=
APP_TIMEZONE=UTC
APP_LOCALE=en

# Protocol Configuration
APP_PROTOCOL=http
FORCE_HTTPS=false

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=nexus
DB_USERNAME=root
DB_PASSWORD=

# Cache
CACHE_DRIVER=file
CACHE_PREFIX=nexus_cache
CACHE_TTL=3600

# Redis Cache (if using redis driver)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_COOKIE_NAME=nexus_session
SESSION_COOKIE_PATH=/
SESSION_COOKIE_DOMAIN=
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# Queue
QUEUE_CONNECTION=sync
QUEUE_RETRY_AFTER=90
QUEUE_MAX_ATTEMPTS=3

# Database Queue (if using database driver)
QUEUE_TABLE=jobs
QUEUE_FAILED_TABLE=failed_jobs

# Mail / SMTP
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=hello@example.com
MAIL_FROM_NAME="${APP_NAME}"

# Gmail SMTP (alternative)
GMAIL_USERNAME=
GMAIL_PASSWORD=

# Office 365 SMTP (alternative)
OFFICE365_USERNAME=
OFFICE365_PASSWORD=

# Amazon SES SMTP (alternative)
SES_HOST=email-smtp.us-east-1.amazonaws.com
SES_USERNAME=
SES_PASSWORD=

# Socket Configuration
SOCKET_TYPE=tcp
SOCKET_TIMEOUT=30

# WebSocket Server
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8080
WEBSOCKET_MAX_CLIENTS=100
WEBSOCKET_PING_INTERVAL=30

# Socket SSL/TLS
SOCKET_SSL_VERIFY_PEER=true
SOCKET_SSL_VERIFY_PEER_NAME=true
SOCKET_SSL_ALLOW_SELF_SIGNED=false
SOCKET_SSL_CAFILE=
SOCKET_SSL_CAPATH=
SOCKET_SSL_LOCAL_CERT=
SOCKET_SSL_LOCAL_PK=
SOCKET_SSL_PASSPHRASE=

# Socket Server
SOCKET_SERVER_HOST=0.0.0.0
SOCKET_SERVER_PORT=8000
SOCKET_SERVER_BACKLOG=128
SOCKET_SERVER_REUSE_ADDR=true
SOCKET_SERVER_REUSE_PORT=true

# HTTP Client
HTTP_TIMEOUT=30
HTTP_CONNECT_TIMEOUT=10
HTTP_VERIFY_SSL=true
HTTP_FOLLOW_REDIRECTS=true
HTTP_MAX_REDIRECTS=10
HTTP_USER_AGENT="Nexus-HTTP-Client/1.0"

# HTTP Client Retry
HTTP_RETRY_ENABLED=false
HTTP_RETRY_MAX=3
HTTP_RETRY_DELAY=1000
HTTP_RETRY_MULTIPLIER=2

# HTTP Client Base URLs
API_BASE_URL=
CDN_BASE_URL=

# HTTP Client SSL
HTTP_SSL_VERIFY_PEER=true
HTTP_SSL_VERIFY_HOST=2
HTTP_SSL_CAFILE=
HTTP_SSL_CAPATH=

# HTTP Client Proxy
HTTP_PROXY_ENABLED=false
HTTP_PROXY_HOST=
HTTP_PROXY_PORT=
HTTP_PROXY_USERNAME=
HTTP_PROXY_PASSWORD=
HTTP_PROXY_TYPE=http

# HTTP Client Cookies
HTTP_COOKIES_ENABLED=true

# HTTP Client Debug
HTTP_DEBUG=false
HTTP_LOG_REQUESTS=false
HTTP_LOG_RESPONSES=false

# HTTP Client Rate Limiting
HTTP_RATE_LIMIT_ENABLED=false
HTTP_RATE_LIMIT_MAX=60
HTTP_RATE_LIMIT_PERIOD=60

# HTTP Client Connection Pooling
HTTP_POOL_ENABLED=true
HTTP_POOL_MAX_CONNECTIONS=10
HTTP_POOL_MAX_IDLE_TIME=30

# Process / Worker Pool
PROCESS_WORKING_DIR=
PROCESS_TIMEOUT=300
WORKER_POOL_MAX_WORKERS=4
WORKER_POOL_TIMEOUT=300
WORKER_POOL_IDLE_TIMEOUT=60
PROCESS_MEMORY_LIMIT=256M
PROCESS_TIME_LIMIT=300
PHP_BINARY_PATH=

# Rate Limiting
RATE_LIMIT_DRIVER=cache
RATE_LIMIT_KEY_PREFIX=rate_limit

# Encryption
ENCRYPTION_KEY=
ENCRYPTION_CIPHER=AES-256-CBC

# Storage
STORAGE_DRIVER=local
STORAGE_ROOT=storage/app

# S3 Storage (if using s3 driver)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_URL=

# FTP Storage (if using ftp driver)
FTP_HOST=
FTP_PORT=21
FTP_USERNAME=
FTP_PASSWORD=
FTP_ROOT=/
FTP_PASSIVE=true
FTP_SSL=false

# Logging
LOG_CHANNEL=file
LOG_LEVEL=debug
LOG_PATH=storage/logs

# Pagination
PAGINATION_PER_PAGE=15
PAGINATION_MAX_PER_PAGE=100

# View / Template
VIEW_PATH=app/Views
VIEW_CACHE_PATH=storage/views
VIEW_CACHE_ENABLED=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_SECRET=

# Development Server
SERVER_HOST=localhost
SERVER_PORT=8000

# Testing
APP_ENV_TESTING=testing
DB_CONNECTION_TESTING=sqlite
DB_DATABASE_TESTING=:memory:
