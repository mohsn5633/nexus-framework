{
    "name": "nexus/framework",
    "description": "A smart, lightweight PHP framework - easier and more intuitive than Laravel",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\": "src/",
            "App\\": "app/",
            "Packages\\": "packages/"
        },
        "files": [
            "src/Support/helpers.php",
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "bin": [
        "nexus"
    ],
    "scripts": {
        "test": "phpunit",
        "serve": "php nexus serve",
        "post-autoload-dump": [
            "@php -r \"if (!file_exists('app/Commands')) { mkdir('app/Commands', 0755, true); }\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
